<div class="mb-8">
  <h6 class="text-gray-500 mb-3 mt-0">
    Default
  </h6>

  <script>
    window.addEventListener('<%= current_component.stimulus_id %>:submit', (event) => {
      debugger
      alert(`selected: ${event.detail.resultTarget.innerText}`)
    })
    window.addEventListener('<%= current_component.stimulus_id %>:search', (event) => {
      console.log('Search', event.detail)
      setTimeout(() => {
        event.detail.controller.resultsValue = `
          <%= render component('ui/search_panel/result').new.with_content("result 1") %>
          <%= render component('ui/search_panel/result').new.with_content("result 2") %>
          <%= render component('ui/search_panel/result').new.with_content("result 3") %>
        `
      }, 200);
    })
  </script>

  <%= render current_component.new %>
</div>
